<?xml version="1.0" encoding="UTF-8"?>
<world name="Nuclear Winter">
    <description>This world is a post-apocolyptic world, covered in pools of radiation. It is cold and hostile.
    </description>
    <configuration>
        <half_life element='acid' period='50'/>
    </configuration>
    <at_start>
        <add_resources amount='100'>
            <everywhere/>
            <pools count='200' radius='20'/>
        </add_resources>
        <elevation amount='200'>
            <pools count='100' radius='40'/>
        </elevation>
        <acid>
            <vertical_edges width='10'/>
            <horizontal_edges width='10'/>
            <pools count='40' radius='60'/>
        </acid>
        <radiation amount='3'>
            <pools count='100' radius='50'/>
        </radiation>
    </at_start>
    <in_season season="winter">
        <acid>
            <pools count = '10' radius='50'/>
        </acid>
    </in_season>
</world>
